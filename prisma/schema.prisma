generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id String @id @default(cuid())
  firstname String @db.VarChar(100) @map("firstname")
  lastname String @db.VarChar(100) @map("lastname")
  username String @db.VarChar(100)  @map("username") @unique
  email String @unique @db.VarChar(100)
  createdat DateTime @default(now()) @map("created_at")
  password String @db.Char(60)
  scopes Scope[]
  @@map("users")
}

model Scope {
  id String @id @default(cuid())
  name String @db.VarChar(100)
  tokenId String @db.VarChar(3000) @map("token_id")
  clientId String @db.VarChar(3000) @map("client_id")
  userId String @map("user_id")
  user User @relation(fields: [userId], references: [id])
  @@map("scopes_jwt")
  @@unique([clientId, tokenId])
}




